@model Attorney
<form asp-action="Save">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <h1>@Html.DisplayFor(x => x.FullName)</h1>
            <hr />
        </div>
        @Html.HiddenFor(x=>x.Id)
        <div class="col-md-6">
            <div class="col-md-6"><strong>First Name:</strong><input asp-for="FirstName" class="form-control" /></div>
            <div class="col-md-6"><strong>LastName:</strong><input asp-for="LastName" class="form-control" /></div>
            <div class="col-md-6">
                <strong>Bar Number:</strong>
                <input asp-for="BarNumber" class="form-control" />
            </div>
            <div class="col-md-3">
                <strong>Gender: </strong>
                <select asp-for="@Model.Gender" asp-items="Html.GetEnumSelectList<PBTEnums.Gender>()" class="form-control"></select>
            </div>
            <div class="col-md-3"><br/>
                <input asp-for="IsAssigningAttorney" type="checkbox" data-toggle="toggle"
                       data-size="normal"
                       data-onstyle="primary"
                       data-offstyle="primary"
                       data-on= "Assigning"
                       data-off="Volunteer" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-md-12">
                <strong>Organization Name</strong>
                <input asp-for="OrganizationName" class="form-control" />
            </div>
            <div class="col-md-6">
                <strong>Recruited: </strong>
                <input asp-for="RecruitmentDate" class="form-control datepicker" />
            </div>
            <div class="col-md-6">

                <strong>Via</strong>
                <select asp-for="@Model.RecruitmentMethod" asp-items="Html.GetEnumSelectList<PBTEnums.RecruitmentMethod>()" class="form-control"></select>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Phone Number</h2>
                </div>
                <div class="panel-body">
                    <div class="col-md-8">
                        <input asp-for="@Model.Phone.Number" class="form-control" placeholder="Phone Number" />
                    </div>
                    <div class="col-md-4">
                        <select asp-for="@Model.Phone.Type" asp-items="Html.GetEnumSelectList<PBTEnums.NumberType>()" class="form-control"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Address</h2>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <input asp-for="@Model.Address.StreetAddress" class="form-control" placeholder="Street Address" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6"><input asp-for="@Model.Address.City" class="form-control"   placeholder="City" /></div>
                        <div class="col-md-3"><input asp-for="@Model.Address.State" class="form-control"  placeholder="State" /></div>
                        <div class="col-md-3"><input asp-for="@Model.Address.ZipCode" class="form-control"placeholder="Zip/Postal Code" /></div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Email</h2>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <input asp-for="@Model.Email.Address" class="form-control" placeholder="EmailAddress" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Experience/Qualifications</h2>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            <input asp-for="HasImmigrationExperience" type="checkbox" data-toggle="toggle"
                                   data-on="Has<br />Immigration<br />Experience"
                                   data-off="No<br />Immigration<br />Experience"
                                   data-width="120" />
                        </div>
                        <div class="col-md-2">
                            <input asp-for="HasJuvenileExperience" type="checkbox" data-toggle="toggle"
                                   data-on="Has<br />Juvenile<br />Experience"
                                   data-off="No<br />Juvenile<br />Experience"
                                   data-width="120" />
                        </div>
                        <div class="col-md-2">
                            <input asp-for="HasProbateExperience" type="checkbox" data-toggle="toggle"
                                   data-on="Has<br />Probate<br />Experience"
                                   data-off="No<br />Probate<br />Experience"
                                   data-width="120" />
                        </div>
                        <div class="col-md-2">
                            <input asp-for="SpeaksSpanish" type="checkbox" data-toggle="toggle"
                                   data-on="Can<br />Speak<br />Spanish"
                                   data-off="Cannot<br />Speak<br />Spanish"
                                   data-width="120" />
                        </div>
                        <div class="col-md-2">
                            <input asp-for="InterestedVolunteer" type="checkbox" data-toggle="toggle"
                                   data-on="Is<br />Interested<br />Volunteer"
                                   data-off="Is<br />Not<br />Interested<br />"
                                   data-width="120" />
                        </div>
                        <div class="col-md-2">
                            <input asp-for="DesiredVolunteer" type="checkbox" data-toggle="toggle"
                                   data-on="Is<br />Desired<br />Volunteer"
                                   data-off="Is<br />Not<br />Desired<br />"
                                   data-width="120" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Contributions</h2>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            <strong>@Html.DisplayNameFor(model => model.LatinoMemContribution)</strong><br />
                            <input asp-for="@Model.LatinoMemContribution" class="form-control" placeholder="0.00" />
                        </div>
                        <div class=" col-md-4">
                            <strong>@Html.DisplayNameFor(model => model.MiaContribution)</strong><br />
                            <input asp-for="@Model.MiaContribution" class="form-control"placeholder="0.00" />
                        </div>
                        <div class="col-md-4">
                            <strong>@Html.DisplayNameFor(model => model.ClcContribution)</strong><br />
                            <input asp-for="@Model.ClcContribution" class="form-control" placeholder="0.00"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Notes</h2>
                </div>
                <div class="panel-body">
                    <textarea style="max-width: 1080px" cols="2" rows="8" asp-for="Notes" class="form-control"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
        <button type="submit" class="btn btn-primary pull-right">Save</button>
    </div>
</form>
@section scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}